<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/oneplusnewupdate"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="One Plus Nord 2 5G"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Points:800"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:id="@+id/btnaddcartphone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/etmobileqty"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="1"
            android:inputType="number"
            android:layout_marginLeft="35dp"
            android:visibility="gone"/>

    </LinearLayout>

        <ImageView
            android:id="@+id/text_slideshow1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/phonenew"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name: One Plus Nord 2 5G"
            android:textColor="#000000"
            android:textSize="20dp"
            android:visibility="gone"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Points:800"
            android:textColor="#000000"
            android:textSize="20dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:id="@+id/btnaddcartphone2"
            android:visibility="gone"/>


    </LinearLayout>




</ScrollView>